{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="text-center">
            <div class="card text-center">
                <div class="card-header">{{ task['cat_name'] }}</div>
                <div class="card-header">Выполнено: {{ task['is_done'] ? '+' : '-' }}</div>
                <div class="card-header">Дата: {{ task['task_date'] }}</div>
                <div class="card-header">Создан: {{ task['created_at'] }}</div>
                <div class="card-header">Обновлён: {{ task['created_at'] }}</div>
                {% if not task['is_done'] %}
                    <div class="card-header"><a href="/set-as-done/{{ task['id'] }}">Установить выполненным</a></div>
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">{{ task['title'] }}</h5>
                    <p class="card-text">{{ task['description'] }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}