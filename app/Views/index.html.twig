{% extends "base.html.twig" %}
{% block body %}
    <div class="container">
    <div class="text-center">
        <h2>Список задач</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Заголовок</th>
                    <th class="text-center">Выполнено</th>
                    <th class="text-center">Категория</th>
                    <th class="text-center">Дата</th>
                    <th class="text-center">Создан</th>
                    <th class="text-center">Обновлён</th>
                    <th class="text-center">Выполнено</th>
                </tr>
                </thead>
                <tbody>
                {% for task in tasks['data'] %}
                    {% set taskId = task['id'] %}
                    <tr>
                        <td>{{ taskId }}</td>
                        <td><a href="/tasks/{{ taskId }}">{{ task['title'] }}</a></td>
                        <td>{{ task['is_done'] ? '+' : '-' }}</td>
                        <td>{{ task['cat_name'] }}</td>
                        <td>{{ task['task_date'] }}</td>
                        <td>{{ task['created_at'] }}</td>
                        <td>{{ task['updated_at'] }}</td>
                        {% if task['is_done'] %}
                            <td><a style="color: gray; pointer-events: none">Выполнено</a></td>
                        {% else %}
                            <td><a href="/set-as-done/{{ taskId }}">Выполнено</a></td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <ul class="pagination">
            {% for page in tasks['links'] %}
                <li class="page-item">
                    <a class="page-link" href="{{ page['url'] }}" tabindex="-1">{{ page['label'] }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}